#!/bin/sh
#
# Pre-commit hook for zeteo
# This hook runs formatting, linting, and build checks before each commit.
#
# To install: cp hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit
# Or run: ./scripts/setup-hooks.sh

set -e

echo "Running pre-commit checks..."

# Check formatting
echo "Checking formatting..."
if ! cargo fmt --all -- --check; then
    echo ""
    echo "ERROR: Formatting check failed!"
    echo "Run 'cargo fmt' to fix formatting issues."
    exit 1
fi

# Run clippy
echo "Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo ""
    echo "ERROR: Clippy found issues!"
    echo "Fix the above warnings before committing."
    exit 1
fi

# Build check
echo "Checking build..."
if ! cargo check; then
    echo ""
    echo "ERROR: Build check failed!"
    exit 1
fi

echo ""
echo "All pre-commit checks passed!"
